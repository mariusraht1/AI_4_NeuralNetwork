<VBox stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.MainScene">
	<children>
		<GridPane hgap="5.0" vgap="5.0">
			<columnConstraints>
				<ColumnConstraints />
				<ColumnConstraints />
				<ColumnConstraints />
				<ColumnConstraints />
				<ColumnConstraints />
				<ColumnConstraints />
				<ColumnConstraints hgrow="SOMETIMES" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints />
				<RowConstraints />
				<RowConstraints minHeight="10.0" prefHeight="30.0" />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Initiale Startwerte:" GridPane.columnSpan="2">
					<font>
						<Font name="System Bold" size="12.0" />
					</font>
				</Label>
				<TabPane fx:id="tp_inputData" tabClosingPolicy="UNAVAILABLE" GridPane.columnSpan="5" GridPane.rowIndex="1">
					<tabs>
						<Tab text="Bilddatei">
							<content>
								<GridPane hgap="5.0" vgap="5.0">
									<children>
										<Label prefWidth="64.0" text="Bilddatei:" />
										<TextField fx:id="tf_imageFile" disable="true" prefWidth="160.0" GridPane.columnIndex="1" />
										<Button fx:id="btn_imageFile" disable="true" maxWidth="-Infinity" mnemonicParsing="false" onAction="#onAction_chooseImageFile" text="..." GridPane.columnIndex="2" />
										<Label prefWidth="64.0" text="Labeldatei:" GridPane.rowIndex="1" />
										<TextField fx:id="tf_labelFile" disable="true" prefWidth="160.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
										<Button fx:id="btn_labelFile" disable="true" maxWidth="-Infinity" mnemonicParsing="false" onAction="#onAction_chooseLabelFile" text="..." GridPane.columnIndex="2" GridPane.rowIndex="1" />
										<CheckBox mnemonicParsing="false" onAction="#onAction_chkInternalFiles" selected="true" text="Verwende interne Dateien" GridPane.columnSpan="2" GridPane.rowIndex="2" />
										<Button mnemonicParsing="false" onAction="#onAction_loadData" prefWidth="50.0" text="Laden" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
									</children>
									<rowConstraints>
										<RowConstraints />
										<RowConstraints />
										<RowConstraints vgrow="SOMETIMES" />
									</rowConstraints>
									<columnConstraints>
										<ColumnConstraints />
										<ColumnConstraints hgrow="SOMETIMES" />
										<ColumnConstraints />
									</columnConstraints>
									<padding>
										<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
									</padding>
								</GridPane>
							</content>
						</Tab>
						<Tab text="Zeichnen">
							<content>
								<GridPane hgap="5.0" vgap="5.0">
									<columnConstraints>
										<ColumnConstraints />
										<ColumnConstraints />
										<ColumnConstraints hgrow="SOMETIMES" />
									</columnConstraints>
									<rowConstraints>
										<RowConstraints />
									</rowConstraints>
									<children>
										<StackPane fx:id="sp_parentOfCanvas" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="84.0" prefWidth="84.0" style="-fx-background-color: black;" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
											<children>
												<Canvas fx:id="cv_canvas" height="${sp_parentOfCanvas.height}" onMouseDragged="#onMouseDragged_canvas" onMousePressed="#onMousePressed_canvas" width="${sp_parentOfCanvas.width}" />
											</children>
										</StackPane>
										<VBox spacing="5.0" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
											<children>
												<Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAction_btnClearCanvas" text="Clear" />
												<TextField fx:id="tf_labelDrawing" alignment="CENTER" prefWidth="40.0" promptText="0-9" />
												<Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAction_btnSaveDrawing" text="OK" />
											</children>
										</VBox>
									</children>
									<padding>
										<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
									</padding>
								</GridPane>
							</content>
						</Tab>
					</tabs>
				</TabPane>
				<ListView fx:id="lv_console" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="350.0" GridPane.columnIndex="6" GridPane.hgrow="ALWAYS" GridPane.rowSpan="12" GridPane.vgrow="ALWAYS" />
				<Separator GridPane.columnSpan="5" GridPane.rowIndex="5">
					<padding>
						<Insets top="2.0" />
					</padding>
				</Separator>
				<Label text="Ablaufsteuerung:" GridPane.columnSpan="2" GridPane.rowIndex="6">
					<font>
						<Font name="System Bold" size="12.0" />
					</font>
				</Label>
				<VBox maxHeight="1.7976931348623157E308" spacing="5.0" GridPane.columnIndex="5" GridPane.rowSpan="12" GridPane.vgrow="ALWAYS">
					<children>
						<Label fx:id="lbl_results" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Ergebnisse (0,00 %)">
							<font>
								<Font name="System Bold" size="14.0" />
							</font>
						</Label>
						<ListView fx:id="lv_results" />
					</children>
				</VBox>
				<ComboBox fx:id="cb_distribution" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />
				<Label text="Verteilung:" GridPane.rowIndex="3">
					<GridPane.margin>
						<Insets right="5.0" />
					</GridPane.margin>
				</Label>
				<Label text="Aktivierung:" GridPane.rowIndex="4">
					<GridPane.margin>
						<Insets right="5.0" />
					</GridPane.margin>
				</Label>
				<ComboBox fx:id="cb_activationFunction" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="4" />
				<Button mnemonicParsing="false" onAction="#onAction_setOptions" prefWidth="50.0" text="OK" GridPane.columnIndex="4" GridPane.rowIndex="4" />
				<ComboBox fx:id="cb_operationMode" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="7" />
				<Label text="Modus:" GridPane.rowIndex="7" />
				<Label text="Steps:" GridPane.rowIndex="8" />
				<TextField fx:id="tf_numOfSteps" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0" promptText="1-N" GridPane.columnIndex="1" GridPane.rowIndex="8" />
				<Button mnemonicParsing="false" onAction="#onAction_btnPlay" prefWidth="50.0" text="Play" GridPane.columnIndex="2" GridPane.rowIndex="8" />
				<Button minWidth="50.0" mnemonicParsing="false" onAction="#onAction_btnReset" text="Reset" GridPane.columnIndex="3" GridPane.rowIndex="8" />
				<Button minWidth="50.0" mnemonicParsing="false" onAction="#onAction_btnExport" text="Export" GridPane.columnIndex="4" GridPane.rowIndex="8" />
				<CheckBox fx:id="chk_animate" mnemonicParsing="false" text="AusfÃ¼hrung animieren" GridPane.columnSpan="3" GridPane.rowIndex="9" />
				<CheckBox fx:id="chk_disableLogging" mnemonicParsing="false" text="Logging ausschalten" GridPane.columnSpan="3" GridPane.rowIndex="10" />
				<Label text="Lernrate:" GridPane.rowIndex="2" />
				<TextField fx:id="tf_learningRate" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0" promptText="0.0-1.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
			</children>
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</VBox.margin>
		</GridPane>
	</children>
</VBox>
